    OBJECTS calcTask = CalcTask  PANEL
    EVENTS ON OK {
        taskCompletedTime(calcTask)  <- currentDateTime();
    }
    EVENTS ON APPLY {
        taskCompletedTime(calcTask)  <- currentDateTime();
