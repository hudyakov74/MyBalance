META createLocalMenuOperation(menuName,extendedForm)
 // меню операции ..........................................
 CLASS MenuOperations##menuName 'Операции...'{ 
   copy  'Скопировать...'
 } 
   
 FORM menuOperations##menuName##List 'Выбор операции'
 OBJECTS op = MenuOperations##menuName 
 PROPERTIES READONLY  staticCaption(op)
 LIST MenuOperations##menuName OBJECT op;
   
 operation##menuName ABSTRACT (CalcTask,  MenuOperations##menuName);
 //====================== 
 runOperation##menuName(CalcTask ct , s) {
   DIALOG menuOperations##menuName##List OBJECTS op INPUT z FLOAT CANCEL DO {
             operation##menuName(ct, z);
      }  
 };
   ///3 ОФОРМЛЕНИЕ
   EXTEND FORM extendedForm 
     PROPERTIES  // exec 'Импорт/экспорт...' = runActions(calcTask),
     execLocal 'Расчеты...'= runOperation##menuName(calcTask,s) WAIT; 
    
   // ДИЗАЙН
   DESIGN extendedForm {
    
       panelFirstHorizontal {
          MOVE PROPERTY (execLocal) BEFORE PROPERTY (nameB) ;
         };
        
    }
 END



META createLocalMenuOperation2(menuName, extendedForm, typeTask)
    // меню операции ..........................................
    CLASS  MenuOperations##menuName : LogicCalc;

    descrMenuOperations(Task t) += WHEN type(t) = typeTask THEN 
           CONCAT '', 
                  '\n ФУНКЦИИ ФОРМЫ:\n', 
                   (GROUP CONCAT 
                                '* '+
                               // (IF logicTask(t) == MenuOperations##menuName THEN 'ОСНОВНОЙ АЛГОРИТМ ' ELSE '')+
                                staticCaption(MenuOperations##menuName n AS MenuOperations##menuName) 
                                + ':\n------------------\n' + (OVERRIDE descrMyBalance(n),''),
                   '\n=====\n' ORDER n),
                  '\n====Окончание раздела ФУНКЦИИ ФОРМЫ=====\n';
    
    EXTEND  CLASS  MenuOperations##menuName {
        copy  'Скопировать...'
    }

    FORM menuOperations##menuName##List  'Выбор операции'
        OBJECTS op '' = MenuOperations##menuName
        PROPERTIES READONLY  staticCaption(op)
        PROPERTIES READONLY descr = RICHTEXT (descrMyBalance(op)) PANEL
        ON CHANGE {PRINT textExport OBJECTS t = descrMyBalance(op) DOCX;} 
        LIST MenuOperations##menuName OBJECT op;
    
        
    DESIGN  menuOperations##menuName##List{
        OBJECTS {
            fill = 1;
            NEW  p1 {
                fill = 0.2;
                MOVE PROPERTY (descr) { caption = ''; fill = 1; }
            }
        }
         PROPERTY (staticCaption(op)) { fill = 0.8;  } 
    }

    operation##menuName ABSTRACT (CalcTask,  MenuOperations##menuName);
    //====================== 
    runOperation##menuName(CalcTask ct , s) {
        DIALOG menuOperations##menuName##List OBJECTS op INPUT z FLOAT CANCEL DO {
            operation##menuName(ct, z);
        }
    };
    ///3 ОФОРМЛЕНИЕ
    EXTEND FORM extendedForm
        PROPERTIES  // exec 'Импорт/экспорт...' = runActions(calcTask),
        execLocal 'Расчеты...'= runOperation##menuName(calcTask,s) WAIT;

    // ДИЗАЙН
    DESIGN extendedForm {
        panelFirstHorizontal {
            MOVE PROPERTY (execLocal) BEFORE PROPERTY (nameB) ;
        };

    }
   
    // Алгоритм в шапке
//    EXTEND FORM extendedForm
//    PROPERTIES  logicCalcTask 'Алгоритм' = name(logicCalcTask(calcTask))
//    READONLYIF readOnlyIfCheked(calcTask)
