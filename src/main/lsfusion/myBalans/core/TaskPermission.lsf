MODULE TaskPermission;

REQUIRE Task,Security;

NAMESPACE Budget;


taskPermission 'Доступ к участку' = DATA BOOLEAN (Task ,UserRole);

hasCurrentUserTaskPermission(Task t) = GROUP MAX TRUE IF 
                                    taskPermission(t, UserRole ur)
                                    AND has(currentUser(),ur);   


